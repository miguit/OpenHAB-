
#include <VirtualWire.h>

  float temp;
  int tempPin = 0;
 
  int i;



void setup(){
 
  Serial.begin(9600);
 
  vw_setup(2000);
  vw_rx_start();
  vw_set_rx_pin(11);
}

void loop(){
   
  uint8_t buf[VW_MAX_MESSAGE_LEN];
  uint8_t buflen = VW_MAX_MESSAGE_LEN;

  if( vw_get_message(buf, &buflen) )
 
    {
           
      for (i = 0; i < buflen; i++)
       
            Serial.print(char(buf[i]));  
           if (i>=buflen){
            Serial.println("");
           } 
     }

          }
